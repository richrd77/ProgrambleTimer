<?xml version='1.0' encoding='utf-8'?>
<widget id="com.richard.programabletimer" version="1.180.45" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Programble Timer</name>
    <description>
        This app can be programed by a user who has to do certain activities in a cyclic fashion
    </description>
    <author email="richrd77@gmail.com" href="#">
        ರಿಚರ್ಡ್ ಪ್ರಕಾಶ್
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="./src/assets/images/Richrd-Logo.png"></icon>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="./src/assets/images/Richrd-Logo.png"></icon>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
